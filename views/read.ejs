<html lang="en"></html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Document</title>
</head>

<body>
  <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <a href="/" class="text-blue-500">Back to home</a>
    <h1 class="text-3xl mt-10 tracking-tighter mb-3">All users</h1>
    <div class="users flex flex-wrap gap-3">
      <% if(users.length>0){ %>
      <% users.forEach((user)=> { %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
            <img src="<%= user.imageurl %>" class="w-full h-full object-cover object-top">
          </div>
          <h3 class="text-xl tracking-tighter mt-3"><%= user.name%></h3>
          <h5 class="text-zinc-500"><%=user.email%></h5>
          <div class="flex gap-3 mt-10">
            <a href="" class="text-zinc-600">Edit User</a>
            <a href="/delete/<%= user.id %>" class="text-red-500">Delete User</a>
          </div>
        </div>
      <% }) %>
      <%} else{ %>
        <h3 class = "text-zinc-600" >No users yet</h3>
       <% } %>

      
    </div>
  </div>
</body>

</html>